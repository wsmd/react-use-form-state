{
  "name": "react-use-form-state",
  "version": "0.1.3",
  "description": "A small hook for managing forms and inputs state in React",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/wsmd/react-use-form-state"
  },
  "bugs": {
    "url": "https://github.com/wsmd/react-use-form-state/issues"
  },
  "author": "Waseem Dahman <dwaseem@icloud.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "form",
    "forms",
    "state",
    "hook"
  ],
  "scripts": {
    "build": "babel src -d dist",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint src",
    "prepack": "yarn run lint && yarn run test",
    "prepublishOnly": "yarn run build",
    "test": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.js"
    ]
  },
  "peerDependencies": {
    "react": "^16.7.0-alpha.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "react": "^16.7.0-alpha.0"
  }
}

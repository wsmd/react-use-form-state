{
  "name": "react-use-form-state",
  "version": "0.7.0",
  "description": "React hook for managing form and inputs state",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "repository": "wsmd/react-use-form-state",
  "homepage": "http://react-use-form-state.now.sh",
  "bugs": {
    "url": "https://github.com/wsmd/react-use-form-state/issues"
  },
  "author": "Waseem Dahman <dwaseem@icloud.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "form",
    "forms",
    "state",
    "hook"
  ],
  "scripts": {
    "build": "rollup -c && cp src/index.d.ts dist/index.d.ts",
    "build:dev": "rollup -c -w",
    "clean": "rm -rf dist",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint src test",
    "prepack": "yarn clean && yarn build",
    "prepublishOnly": "yarn test:all",
    "test": "jest --coverage",
    "test:all": "yarn lint && yarn typecheck && yarn test",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "watchPathIgnorePatterns": [
      "dist"
    ],
    "collectCoverageFrom": [
      "src/**"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@types/react": "^16.8.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.0",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "react-testing-library": "^5.2.3",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "typescript": "^3.3.3333"
  }
}

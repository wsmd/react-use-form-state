{
  "extends": ["airbnb", "prettier"],
  "plugins": ["react-hooks"],
  "env": {
    "jest": true
  },
  "rules": {
    "consistent-return": "off",
    "getter-return": "off",
    "arrow-parens": ["error", "as-needed"],
    "react/jsx-filename-extension": [
      "error",
      { "extensions": [".js", ".jsx"] }
    ],
    "import/prefer-default-export": false,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
